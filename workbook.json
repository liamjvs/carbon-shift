              "version": "KqlItem/1.0",
              "query": "csSchedule_CL \r\n| summarize arg_max(TimeGenerated, *) by windowStart_t, windowEnd_t, vmID_s\r\n| project TimeGenerated, vmID=vmID_s, windowStart=windowStart_t,windowEnd=windowEnd_t, slotStart=slotStart_t, slotEnd=slotEnd_s, averageIntensity=round(averageIntensity_d,0), intensity=intensity_d\r\n| extend carbonSaving=round(100-((intensity/averageIntensity)*100))\r\n| extend status=iff(todatetime(slotEnd)<now(), \"Completed\", \"Scheduled\")\r\n| sort by TimeGenerated",
              "size": 0,
              "timeContext": {
                "durationMs": 2592000000
